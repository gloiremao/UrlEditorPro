{
  "manifest_version": 2,

  "name": "Url Editor PRO",
  "description": "Makes editing long/complex URLs as easy as possible. Features: encoding/decoding, auto-suggest/complete, full keyboard navigation...",
  "version": "0.8",

  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab"
  ],
  "icons": {
    "16": "img/edit_16.png",
    "48": "img/edit_32.png",
    "128": "img/edit.png"
  },
  "browser_action": {
    "default_icon": "img/edit_32.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      }
    }
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}